[version]
current = 0.1.30+build.173
previous = 0.1.29-beta.0+build.172

[options]
log_file = ican.log

[file: version]
file = ./ican/__init__.py
variable = __version__
style = semantic

[file: public]
file = ./ican/__init__.py
variable = __public_version__
style = public

[pipeline: git]
step2 = git add .
step3 = git commit -m "auto-commit for {{tag}}"
step4 = git tag -a {{tag}} -m "automated tag for release {{tag}}" --sign
step5 = git push origin HEAD {{tag}}

[pipeline: release]
step1 = $_ICAN{bump patch}
step2 = $_ICAN{run git}

[pipeline: lint]
step1 = black ./ican/
step2 = flake8 ./ican/*

[pipeline: beta]
step1 = $_ICAN{pre beta}

[pipeline: test]
step1 = echo "{{semantic}}"
step2 = $_ICAN{bump build}
step3 = echo "{{semantic}}"

