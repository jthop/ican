[version]
current = 0.1.13+build.151

[options]
log_file = ican.log

[aliases]
deploy = test first

[file: version]
file = ./ican/__init__.py
variable = __version__
style = semantic

[file: public]
file = ./ican/__init__.py
variable = __public_version__
style = public

[pipeline: release]
step1 = git add .
step2 = git commit -m "auto-commit for {{tag}}"
step3 = git tag -a {{tag}} -m "automated tag for release {{tag}}" --sign
step4 = git push origin master {{tag}}

[pipeline: build]
step1 = touch /tmp/test.txt
step2 = echo {{tag}}

