[version]
current = 0.1.23+build.162
previous = 0.1.22+build.161

[options]
log_file = ican.log

[aliases]
deploy = test first

[file: version]
file = ./ican/__init__.py
variable = __version__
style = semantic

[file: public]
file = ./ican/__init__.py
variable = __public_version__
style = public

[pipeline: new.release]
step1 = git add .
step2 = git commit -m "auto-commit for {{tag}}"
step3 = git tag -a {{tag}} -m "automated tag for release {{tag}}" --sign
step4 = git push origin master {{tag}}

[pipeline: test]
step1 = echo "foo"
step2 = env

[pipeline: lint]
step1 = black ./ican/
step2 = flake8 ./ican/*

