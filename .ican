[version]
current = 0.1.8+build.116

[options]
log-file = ican.log

[aliases]
deploy = test first

[file: version]
file = ./ican/__init__.py
variable = __version__
style = semantic

[file: public]
file = ./ican/__init__.py
variable = __public_version__
style = public

[pipeline: release]
step1 = git add .
step2 = echo "{{msg}}" > /tmp/commit.txt
step3 = git commit -F /tmp/commit.txt
step4 = git tag -a {{tag}} -m "automated tag for release {{tag}} " --sign
step5 = git push origin master {{tag}}
step6 = rm /tmp/commit.txt

